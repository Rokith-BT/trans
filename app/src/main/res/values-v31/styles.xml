<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/rounded_rectangle_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/size_text_16sp</item>
        <item name="android:clipToOutline">true</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="DefaultDisableButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/round_disable_button</item>
        <item name="android:fontFamily">@font/mulish_normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/size_text_16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>