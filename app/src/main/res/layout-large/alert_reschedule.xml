<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="700dp"
    android:layout_height="400dp"
    android:layout_centerInParent="true"
    android:layout_margin="@dimen/size_20dp"
    android:background="@drawable/rounded_rectangle_white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/patient_inf"
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:layout_marginStart="@dimen/size_20dp"
        android:layout_marginEnd="@dimen/size_20dp"
        android:gravity="center_vertical"
        android:text="@string/reschedule"
        android:textAppearance="@style/patient_info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:layout_marginStart="@dimen/size_20dp"
        android:layout_marginEnd="@dimen/size_20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/doctor"
            android:textAppearance="@style/enter_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/payment"
            android:textAppearance="@style/enter_text" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="@dimen/size_20dp"
        android:layout_marginEnd="@dimen/size_20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtDocName"
            style="@style/editText"
            android:layout_weight="1"
            android:hint="@string/doctor"
            android:enabled="false"
            android:imeOptions="actionNext"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtPayment"
            style="@style/editText"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_weight="1"
            android:enabled="false"
            android:imeOptions="actionNext"
            android:inputType="text" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/size_10dp"

        android:layout_marginStart="@dimen/size_20dp"
        android:layout_marginEnd="@dimen/size_20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/date"
            android:textAppearance="@style/enter_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/slotTime"
            android:textAppearance="@style/enter_text" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:layout_marginStart="@dimen/size_20dp"
        android:layout_marginEnd="@dimen/size_20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtDate"
            style="@style/editText"
            android:layout_weight="1"
            android:drawableEnd="@drawable/calendar_date"
            android:drawablePadding="10dp"
            android:focusable="false"
            android:hint="@string/dob_format"
            android:imeOptions="actionNext" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_weight="1">

            <Spinner
                android:id="@+id/spinSlotTime"
                style="@style/editText"
                android:background="@drawable/rounded_rectangle_gray_outline" />

            <View
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/chevron_down" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:layout_marginStart="@dimen/size_20dp"
        android:layout_marginEnd="@dimen/size_20dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/status"
            android:textAppearance="@style/enter_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/message"
            android:textAppearance="@style/enter_text" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:layout_marginStart="@dimen/size_20dp"
        android:layout_marginEnd="@dimen/size_20dp"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1">

            <Spinner
                android:id="@+id/spinStatus"
                style="@style/editText"
                android:background="@drawable/rounded_rectangle_gray_outline" />

            <View
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/chevron_down" />
        </RelativeLayout>

        <EditText
            android:id="@+id/edtMsg"
            style="@style/editText"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_weight="1"
            android:imeOptions="actionDone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:layout_marginStart="@dimen/size_20dp"
        android:layout_marginEnd="@dimen/size_20dp"
        android:layout_marginTop="@dimen/size_40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            style="@style/DefaultButton"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle_blue_outline"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/appbarColor" />

        <Button
            android:id="@+id/btnSave"
            style="@style/DefaultButton"
            android:layout_marginStart="@dimen/size_20dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle_blue"
            android:text="@string/save"
            android:textAllCaps="false" />

    </LinearLayout>

</LinearLayout>
