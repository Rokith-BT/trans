<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_above="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:visibility="visible"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/size_50dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/plenome_icon" />
        <!-- Auto layout, variables, and unit scale are not yet supported -->
        <TextView
            android:id="@+id/plenome"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imgLogo"
            android:gravity="center_vertical"
            android:lineSpacingExtra="8sp"
            android:text="@string/plenome"
            android:textAppearance="@style/plenome" />

    </RelativeLayout>


    <!--    <androidx.core.widget.NestedScrollView-->
    <!--        android:id="@+id/scroll"-->
    <!--        android:layout_width="600dp"-->
    <!--        android:layout_height="460dp"-->
    <!--        android:background="@color/bg"-->
    <!--        android:layout_centerInParent="true">-->

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="600dp"
        android:layout_height="460dp"
        android:layout_centerInParent="true">
        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="460dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_marginEnd="@dimen/size_16dp"
            android:background="@drawable/rounded_rectangle_light_blue"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="460dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/size_50dp"
                android:layout_marginEnd="@dimen/size_50dp"
                android:background="@color/loginBg"
                android:orientation="vertical">


                <!-- Auto layout, variables, and unit scale are not yet supported -->
                <TextView
                    android:id="@+id/login_as_us"
                    android:layout_width="455dp"
                    android:layout_height="40dp"
                    android:fontFamily="@font/mulish_normal"
                    android:gravity="center_horizontal|center_vertical"
                    android:lineSpacingExtra="10sp"
                    android:text="@string/welcome"
                    android:layout_marginTop="40dp"
                    android:textAppearance="@style/login_as_user" />

                <TextView
                    style="@style/inputLabel"
                    android:layout_marginTop="@dimen/size_24dp"
                    android:text="@string/email_login" />

                <EditText
                    android:id="@+id/email"
                    style="@style/inputEditText"
                    android:hint="@string/enter_your_email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress" />

                <TextView
                    style="@style/inputLabel"
                    android:layout_marginTop="@dimen/size_14dp"
                    android:text="@string/pwd" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <EditText
                        android:id="@+id/password"
                        style="@style/inputEditText"
                        android:hint="@string/enter_your_pwd"
                        android:layout_centerVertical="true"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword" />

                    <CheckBox
                        android:id="@+id/chkPassword"
                        android:layout_width="@dimen/size_35dp"
                        android:layout_height="@dimen/size_35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="5dp"
                        android:button="@drawable/checkbox_background"
                        android:gravity="center_vertical" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/invalid"
                        style="@style/forgotPwdText"
                        android:layout_width="wrap_content"
                        android:layout_gravity="end"
                        android:textColor="@color/red_text"
                        android:layout_marginTop="@dimen/size_16dp"
                        android:visibility="visible"
                        android:text="" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:id="@+id/forgot_password"
                        style="@style/forgotPwdText"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/size_16dp"
                        android:text="@string/forgotPwd" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_toStartOf="@+id/forgot_password"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/chkRemPwd"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:id="@+id/txtRemPwd"
                            android:layout_width="125dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:lineSpacingExtra="1sp"
                            android:text="@string/rememberPwd"
                            android:textColor="#18181B"
                            android:textSize="@dimen/size_text_14sp" />
                    </LinearLayout>
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_login"
                    style="@style/DefaultButton"
                    android:layout_marginTop="@dimen/size_32dp"
                    android:text="@string/signin"
                    android:background="@drawable/rounded_rectangle_blue"
                    android:textAllCaps="false" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <!--    </androidx.core.widget.NestedScrollView>-->
</RelativeLayout>