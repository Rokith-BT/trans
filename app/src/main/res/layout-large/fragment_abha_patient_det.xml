<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearPatientDet"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/profileImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/sample_user_img" />

            <TextView
                style="@style/inputLabel"
                android:layout_marginTop="@dimen/size_32dp"
                android:text="@string/aadhaar_no" />

            <TextView
                android:id="@+id/edtAadhar"
                style="@style/ipEditText"
                android:hint="@string/aadhaar_hint"

                />

            <TextView
                style="@style/inputLabel"
                android:layout_marginTop="@dimen/size_32dp"
                android:text="@string/name" />

            <TextView
                android:id="@+id/edtName"
                style="@style/ipEditText"
                android:hint="@string/name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/inputLabel"
                    android:layout_marginTop="@dimen/size_32dp"
                    android:layout_weight="1"
                    android:text="@string/dob" />

                <TextView
                    style="@style/inputLabel"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="@dimen/size_32dp"
                    android:layout_weight="1"
                    android:text="@string/gender" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/edtDob"
                    style="@style/ipEditText"
                    android:layout_weight="1"
                    android:hint="@string/dob" />

                <TextView
                    android:id="@+id/edtGender"
                    style="@style/ipEditText"
                    android:layout_marginStart="30dp"
                    android:layout_weight="1"
                    android:hint="@string/gender" />

            </LinearLayout>

            <!--   <TextView
                   style="@style/inputLabel"
                   android:layout_marginTop="@dimen/size_32dp"
                   android:text="@string/mobileNo" />

               <TextView
                   android:id="@+id/edtMobile"
                   style="@style/ipEditText"
                   android:hint="@string/mobileNo"
                   android:imeOptions="actionNext"
                   android:inputType="number" /> -->

            <TextView
                style="@style/inputLabel"
                android:layout_marginTop="@dimen/size_32dp"
                android:text="@string/address" />

            <EditText
                android:id="@+id/edtAddress"
                style="@style/ipEditText"
                android:layout_height="70dp"
                android:hint="@string/address"
                android:imeOptions="actionDone" />

            <TextView
                android:id="@+id/txtAbhaNo"
                style="@style/inputLabel"
                android:layout_marginTop="@dimen/size_32dp"
                android:text="@string/abha_no" />

            <TextView
                android:id="@+id/edtAbhaNumber"
                style="@style/ipEditText"
                android:hint="@string/abha_no"

                android:textColor="#6070FF" />

            <Button
                android:id="@+id/btnCreateAbhaNo"
                style="@style/DefaultButton"
                android:layout_marginTop="@dimen/size_20dp"
                android:text="@string/create_abha_no"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnDone"
                style="@style/DefaultButton"
                android:layout_marginTop="@dimen/size_20dp"
                android:text="@string/done"
                android:textAllCaps="false" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
