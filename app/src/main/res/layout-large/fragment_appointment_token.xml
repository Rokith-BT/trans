<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/size_20dp">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_rectangle_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_35dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/plenome_icon" />

                <TextView
                    android:id="@+id/plenome"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins_normal"
                    android:gravity="center_vertical"
                    android:text="@string/plenome_hospitals"
                    android:textAppearance="@style/plenome"
                    android:textSize="@dimen/size_text_20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/address"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/hosp_address"
                android:textAppearance="@style/enter_text" />

            <ImageView
                android:id="@+id/imgQR"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtApptNo"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="APPN"
                    android:textAppearance="@style/doctorName" />

                <TextView
                    android:id="@+id/doctorName"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="@string/name"
                    android:textAppearance="@style/ayushman_bh" />

                <TextView
                    android:id="@+id/token"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_40dp"
                    android:gravity="center"
                    android:text="@string/token_no"
                    android:textAppearance="@style/tokenNo" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="5dp"
                android:layerType="software"
                android:src="@drawable/dashed_line_blue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="@dimen/size_20dp"
                android:layout_marginTop="@dimen/size_4dp"
                android:layout_marginEnd="@dimen/size_20dp"
                android:weightSum="4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/patName"
                    android:layout_weight="1.5"
                    android:textAppearance="@style/password_ch" />

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="@dimen/size_10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:textAppearance="@style/password_ch" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="@dimen/size_20dp"
                android:layout_marginTop="@dimen/size_4dp"
                android:layout_marginEnd="@dimen/size_20dp"
                android:weightSum="4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/slDate"
                    android:layout_weight="1.5"
                    android:textAppearance="@style/password_ch" />

                <TextView
                    android:id="@+id/txtSlotDate"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="@dimen/size_10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:textAppearance="@style/password_ch" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="@dimen/size_20dp"
                android:layout_marginTop="@dimen/size_4dp"
                android:layout_marginEnd="@dimen/size_20dp"
                android:layout_marginBottom="@dimen/size_20dp"
                android:weightSum="4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/slTime"
                    android:layout_weight="1.5"
                    android:textAppearance="@style/password_ch" />

                <TextView
                    android:id="@+id/txtSlotTime"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="@dimen/size_10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:layout_weight="2.5"
                    android:textAppearance="@style/password_ch" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45dp"
                android:layout_marginTop="@dimen/size_20dp"
                android:layout_marginBottom="@dimen/size_20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/print_button"
                    style="@style/DefaultButton"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rectangle_blue"
                    android:text="@string/print_token"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/cancel_button"
                    style="@style/DefaultButton"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:layout_marginBottom="@dimen/size_20dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rectangle_blue_outline"
                    android:text="@string/nav_close"
                    android:textAllCaps="false"
                    android:textColor="@color/appbarColor" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>