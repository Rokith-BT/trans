<!-- res/layout/item_medicine.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/abha_bg"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_20dp"
        android:layout_marginEnd="@dimen/size_20dp"
        android:background="@color/white"
        android:orientation="vertical">
        <!-- Header row with headings -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/table_heading_bg"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="2"
                android:fontFamily="@font/mulish_normal"
                android:gravity="center"
                android:text="Medicine Name"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/mulish_normal"
                android:gravity="center"
                android:text="Dosage"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/mulish_normal"
                android:gravity="center"
                android:text="Frequency"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/mulish_normal"
                android:gravity="center"
                android:text="Timing"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/mulish_normal"
                android:gravity="center"
                android:text="Duration"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/mulish_normal"
                android:gravity="center"
                android:text="Quantity"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/mulish_normal"
                android:gravity="center"
                android:text="Action"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/abha_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <!-- Content row with values -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_60dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"

                        android:background="@color/abha_bg"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tvMedicineName"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="2"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rounded_rectangle_white"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/size_4dp"
                            android:text="Dolo"
                            android:textAppearance="@style/email" />

                        <TextView
                            android:id="@+id/tvDosage"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/size_40dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_white_bg"
                            android:gravity="center"
                            android:text="1 Tablet"
                            android:textAppearance="@style/email" />

                        <TextView
                            android:id="@+id/tvFrequency"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/size_40dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rounded_white_bg"
                            android:gravity="center"
                            android:text="1-1-1-1"
                            android:textAppearance="@style/email" />

                        <TextView
                            android:id="@+id/tvTiming"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/size_40dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rounded_white_bg"
                            android:gravity="center"
                            android:text="Before Food"
                            android:textAppearance="@style/email" />

                        <TextView
                            android:id="@+id/tvDuration"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/size_40dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_white_bg"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="5 Days"
                            android:textAppearance="@style/email" />

                        <TextView
                            android:id="@+id/tvQuantity"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/size_40dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_white_bg"
                            android:gravity="center"
                            android:text="5"
                            android:textAppearance="@style/email" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/size_40dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rounded_rectangle_white"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <!-- Delete Icon -->
                            <ImageView
                                android:id="@+id/ivDelete"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_margin="1dp"
                                android:contentDescription="Delete"
                                android:src="@drawable/delete_icon" />

                            <!-- Edit Icon -->
                            <ImageView
                                android:id="@+id/ivEdit"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="@dimen/size_10dp"
                                android:contentDescription="Edit"
                                android:src="@drawable/edit_icon" />
                        </LinearLayout>


                    </LinearLayout>

                    <!-- Remarks section -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/abha_bg">

                        <TextView
                            android:id="@+id/tvRemarks"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_margin="@dimen/size_10dp"
                            android:background="@drawable/rounded_rectangle_white"
                            android:padding="2dp"
                            android:paddingStart="@dimen/size_4dp"
                            android:text="Remarks: No marks"
                            android:textAppearance="@style/email" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
