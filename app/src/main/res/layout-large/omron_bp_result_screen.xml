<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/bpToolbarName"
        app:layout_constraintStart_toStartOf="@+id/backImg"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/size_32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Pressure"
        android:fontFamily="@font/mulish_bold"
        android:textSize="18sp"/>



    <ImageView
        android:id="@+id/backImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="80dp"
        android:layout_width="@dimen/size_300dp"
        android:layout_height="@dimen/size_300dp"
        android:src="@drawable/omron_bg_result"
        />

    <TextView
        android:id="@+id/value"
        app:layout_constraintStart_toEndOf="@+id/backImg"
        app:layout_constraintTop_toTopOf="@+id/backImg"
        android:layout_marginTop="@dimen/size_32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="140 / 87"
        android:layout_marginLeft="@dimen/size_38dp"
        android:fontFamily="@font/mulish_bold"
        android:textSize="50sp"/>

    <TextView
        app:layout_constraintStart_toEndOf="@+id/value"
        app:layout_constraintBottom_toBottomOf="@+id/value"
        android:layout_marginTop="@dimen/size_32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mmHg"
        android:fontFamily="@font/mulish_bold"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/heart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/heart"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/value"
        app:layout_constraintEnd_toEndOf="@+id/value"/>

    <TextView
        android:id="@+id/valuePulse"
        app:layout_constraintTop_toBottomOf="@+id/heart"
        app:layout_constraintStart_toStartOf="@+id/heart"
        app:layout_constraintEnd_toEndOf="@+id/heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="88"
        android:fontFamily="@font/mulish_bold"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/res"
        app:layout_constraintTop_toBottomOf="@+id/valuePulse"
        app:layout_constraintStart_toStartOf="@+id/valuePulse"
        app:layout_constraintEnd_toEndOf="@+id/valuePulse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bpm"
        android:fontFamily="@font/mulish_bold"
        android:textSize="12sp"/>



    <LinearLayout
        android:layout_marginTop="@dimen/size_20dp"
        app:layout_constraintStart_toStartOf="@+id/res"
        app:layout_constraintEnd_toEndOf="@+id/res"
        app:layout_constraintTop_toBottomOf="@+id/res"
        android:layout_width="wrap_content"
        android:weightSum="2"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btnRetake"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Retake"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginEnd="@dimen/size_10dp"
            android:paddingHorizontal="@dimen/size_10dp"
            android:textColor="@color/black"
            android:background="@drawable/edt_blue_border"
            android:fontFamily="@font/mulish_bold"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Generate Report"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/rounded_rectangle_blue"
            android:fontFamily="@font/mulish_bold"
            android:textSize="14sp"/>

    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>