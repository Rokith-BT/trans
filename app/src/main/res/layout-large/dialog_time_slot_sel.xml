<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearDocRow"
    android:layout_width="600dp"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_rectangle_gray_outline"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/size_20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="@string/select_date"
                    android:textAppearance="@style/enter_text" />

                <ImageView
                    android:id="@+id/imgClose"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/close" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50dp"
                android:background="@drawable/rounded_rectangle_light_blue"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtMonth"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/january"
                    android:textAppearance="@style/enter_text" />

                <ImageView
                    android:layout_width="@dimen/size_24dp"
                    android:layout_height="@dimen/size_24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@+id/txtMonth"
                    android:src="@drawable/ic_arrow_left" />

                <ImageView
                    android:layout_width="@dimen/size_24dp"
                    android:layout_height="@dimen/size_24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/size_10dp"
                    android:layout_toEndOf="@+id/txtMonth"
                    android:src="@drawable/ic_arrow_left" />

            </RelativeLayout>

            <!--  <com.harrywhewell.scrolldatepicker.DayScrollDatePicker
                  android:id="@+id/day_date_picker"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" /> -->

            <com.plenome.pos.views.horizontal.HorizontalPicker
                android:id="@+id/day_date_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:gravity="center_vertical"
                android:text="@string/selTime"
                android:textAppearance="@style/patient_info" />

            <TableLayout
                android:id="@+id/tblSlotTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp" />

            <Button
                android:id="@+id/btnConfirm"
                style="@style/DefaultButton"
                android:layout_marginTop="@dimen/size_20dp"
                android:background="@drawable/rounded_rectangle_blue"
                android:text="@string/confirmSlot"
                android:textAllCaps="false" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>