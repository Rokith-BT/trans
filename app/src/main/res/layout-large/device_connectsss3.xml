<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/cvContainer"
    android:padding="20dp"
    tools:ignore="MissingConstraints">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvIndex"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:textSize="12sp"
        android:visibility="gone"
        android:gravity="start|center"
        android:padding="15dp"
        />

    <FrameLayout
        android:id="@+id/device_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/roundcrcle" />

        <ImageView
            android:id="@+id/img_device"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/vibrasense_device" />
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Device Number"
        android:textColor="@color/menuTxtColor"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toRightOf="@+id/device_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mac_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="Mac id"
        android:textColor="@color/appbarColor"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/device_id"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Status"
        android:textColor="@color/approved_bg"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/device_id"
        app:layout_constraintTop_toBottomOf="@+id/mac_id" />


</androidx.constraintlayout.widget.ConstraintLayout>