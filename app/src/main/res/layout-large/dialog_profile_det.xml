<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_rectangle_gray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp">

        <TextView
            android:id="@+id/txtTitle"
            style="@style/textView"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_20dp"
            android:fontFamily="@font/mulish_normal"
            android:gravity="center_vertical"
            android:text="@string/abha_profile_det"
            android:textAppearance="@style/patient_info" />

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/size_20dp"
            android:layout_marginEnd="@dimen/size_10dp"
            android:src="@drawable/close" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="790dp"
        android:layout_height="440dp"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/size_20dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/ic_user" />

                    <View
                        android:id="@+id/imgCamera"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/webcam" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size_16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="@string/full_name"
                    android:textAppearance="@style/enter_text" />

                <EditText
                    android:id="@+id/edtName"
                    style="@style/editText"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/gender"
                android:textAppearance="@style/enter_text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="@dimen/size_16dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/dob"
                android:textAppearance="@style/enter_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_rectangle_gray_outline"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinGender"
                    style="@style/spinner" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/relDob"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45dp"
                android:layout_marginStart="@dimen/size_16dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_rectangle_gray_outline">

                <EditText
                    android:id="@+id/edtDob"
                    style="@style/editText"
                    android:layout_marginEnd="@dimen/size_10dp"
                    android:layout_toStartOf="@+id/imgDob"
                    android:inputType="number"
                    android:background="@android:color/transparent"
                    android:hint="@string/dob_format" />

                <View
                    android:id="@+id/imgDob"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/calendar_new" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/state"
                android:textAppearance="@style/enter_text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="@dimen/size_16dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/pincode"
                android:textAppearance="@style/enter_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_rectangle_gray_outline"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinState"
                    style="@style/spinner" />

            </LinearLayout>

            <EditText
                android:id="@+id/edtPincode"
                style="@style/editText"
                android:layout_marginStart="@dimen/size_16dp"
                android:layout_weight="1"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/district"
                android:textAppearance="@style/enter_text" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:paddingEnd="365dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_rectangle_gray_outline"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinDistrict"
                    style="@style/spinner" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/size_20dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chk"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="450dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_toEndOf="@+id/chk"
                android:gravity="center_vertical"
                android:lineSpacingExtra="1sp"
                android:text="@string/agree"
                android:textAppearance="@style/i_provide_m"
                android:translationY="-0.47sp" />

            <Button
                android:id="@+id/btn_verify"
                style="@style/DefaultButton"
                android:layout_width="200dp"
                android:layout_alignParentEnd="true"
                android:text="@string/verify"
                android:textAllCaps="false" />
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>