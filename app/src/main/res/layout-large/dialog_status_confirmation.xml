<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="300dp"
    android:background="@drawable/rounded_rectangle_white">

    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_marginEnd="@dimen/size_20dp"
        android:src="@drawable/close" />

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_100dp"
        android:gravity="center"
        android:textAppearance="@style/password_ch" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/size_40dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnNo"
            style="@style/DefaultButton"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle_red_outline"
            android:text="@string/no"
            android:textAllCaps="false"
            android:textColor="@color/cancelled_bg" />

        <Button
            android:id="@+id/btnYes"
            style="@style/DefaultButton"
            android:layout_marginStart="@dimen/size_20dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle_green"
            android:text="@string/yes"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </LinearLayout>

</RelativeLayout>