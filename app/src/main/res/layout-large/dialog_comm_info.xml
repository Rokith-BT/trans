<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rounded_rectangle_gray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp">

        <TextView
            android:id="@+id/txtTitle"
            style="@style/textView"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_20dp"
            android:fontFamily="@font/mulish_normal"
            android:gravity="center_vertical"
            android:text="@string/link_abha"
            android:textAppearance="@style/patient_info" />

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/size_20dp"
            android:layout_marginEnd="@dimen/size_10dp"
            android:src="@drawable/close" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="455dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/textView"
            android:layout_marginTop="@dimen/size_20dp"
            android:gravity="center"
            android:text="@string/comm_info"
            android:textAppearance="@style/ayushman_bh" />

        <TextView
            android:layout_width="455dp"
            android:layout_height="25dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:fontFamily="@font/mulish_normal"
            android:gravity="center_vertical"
            android:text="@string/email"
            android:textAppearance="@style/enter_text" />


        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/edit_text"
            android:fontFamily="@font/mulish_normal"
            android:gravity="center_vertical"
            android:imeOptions="actionDone"
            android:paddingStart="@dimen/size_10dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/menuTxtColor" />


        <Button
            android:id="@+id/btn_verify"
            style="@style/DefaultButton"
            android:layout_marginTop="@dimen/size_40dp"
            android:text="@string/verify"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_skip"
            style="@style/DefaultButton"
            android:background="@drawable/rounded_rectangle_blue_outline"
            android:layout_marginTop="@dimen/size_20dp"
            android:textColor="@color/blue_text"
            android:text="@string/skip"
            android:textAllCaps="false" />
    </LinearLayout>
</RelativeLayout>