<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_marginVertical="@dimen/size_12dp"
        android:background="#FCFCFC"
        android:weightSum="7"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateTxt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textSize="@dimen/size_text_14sp"
            android:layout_gravity="center"
            android:fontFamily="@font/mulish_normal"
            android:textColor="#01030F"/>
        <TextView
            android:layout_marginStart="@dimen/size_10dp"
            android:id="@+id/sectionTxt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/section"
            android:textSize="@dimen/size_text_14sp"
            android:layout_gravity="center"
            android:fontFamily="@font/mulish_normal"
            android:gravity="center"
            android:textColor="#01030F"/>

        <TextView
            android:id="@+id/sectionIdsTxt"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_marginLeft="@dimen/size_text_14sp"
            android:layout_height="wrap_content"
            android:text="@string/sectionId"
            android:textSize="@dimen/size_text_14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/mulish_normal"
            android:textColor="#01030F"/>
        <TextView
            android:id="@+id/qtyTxt"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="@string/qty"
            android:textSize="@dimen/size_text_14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/mulish_normal"
            android:textColor="#01030F"/>
        <TextView
            android:id="@+id/chargeTxt"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="@string/charges"
            android:textSize="@dimen/size_text_14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/mulish_normal"
            android:textColor="#01030F"/>
        <TextView
            android:id="@+id/disc"
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:layout_height="wrap_content"
            android:text="@string/discount"
            android:textSize="@dimen/size_text_14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/mulish_normal"
            android:textColor="#01030F"/>
        <TextView
            android:id="@+id/addiCharges"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/addChargesNew"
            android:textSize="@dimen/size_text_14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/mulish_normal"
            android:textColor="#01030F"/>
        <TextView
            android:id="@+id/tax"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="@string/tax"
            android:textSize="@dimen/size_text_14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/mulish_normal"
            android:textColor="#01030F"/>

        <TextView
            android:id="@+id/amtTxts"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/amount"
            android:textSize="@dimen/size_text_14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/mulish_normal"
            android:textColor="#01030F"/>




    </LinearLayout>

</LinearLayout>