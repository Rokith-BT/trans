<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_rectangle_gray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp">

        <TextView
            android:id="@+id/txtTitle"
            style="@style/textView"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_20dp"
            android:fontFamily="@font/mulish_normal"
            android:gravity="center_vertical"
            android:text="@string/abha"
            android:textAppearance="@style/patient_info" />

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/size_20dp"
            android:layout_marginEnd="@dimen/size_10dp"
            android:src="@drawable/close" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="600dp"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/size_20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/textView"
            android:layout_marginTop="@dimen/size_20dp"
            android:gravity="center"
            android:text="@string/select_abha_addr"
            android:textAppearance="@style/ayushman_bh" />

        <TextView
            style="@style/textView"
            android:layout_height="@dimen/size_50dp"
            android:layout_marginTop="@dimen/size_4dp"
            android:gravity="center"
            android:text="@string/sel_string"
            android:textAppearance="@style/master" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            android:background="@color/white">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/card_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/card_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/ic_user"
                    android:layout_margin="8dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="140dp">

                    <TextView
                        android:id="@+id/card_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Card Title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/card_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This is a description for the card."
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/card_description_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This is a description for the card."
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/card_image_2"
                    android:layout_width="20dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_margin="8dp"/>

            </LinearLayout>

        </TableLayout>

        <Button
            android:id="@+id/btn_create_abha_addr"
            style="@style/DefaultButton"
            android:layout_marginTop="@dimen/size_20dp"
            android:text="@string/createNewABHAaddr"
            android:textAllCaps="false" />
    </LinearLayout>

</RelativeLayout>