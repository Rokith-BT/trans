<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="420dp"
        android:layout_centerInParent="true"
        android:background="@color/loginBg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="455dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/mulish_normal"
                android:gravity="center"
                android:lineSpacingExtra="-1sp"
                android:text="@string/change_pwd"
                android:textAppearance="@style/password_reset" />


            <TextView
                android:layout_width="455dp"
                android:layout_height="20dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/mulish_normal"
                android:gravity="center_vertical"
                android:lineSpacingExtra="-1sp"
                android:text="@string/new_pwd"
                android:textAppearance="@style/email" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <EditText
                    android:id="@+id/edtNewPwd"
                    style="@style/inputEditText"
                    android:hint="@string/enter_your_pwd"
                    android:layout_centerVertical="true"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword" />

                <CheckBox
                    android:id="@+id/chkPassword"
                    android:layout_width="@dimen/size_35dp"
                    android:layout_height="@dimen/size_35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="5dp"
                    android:button="@drawable/checkbox_background"
                    android:gravity="center_vertical" />
            </RelativeLayout>

            <TextView
                android:layout_width="455dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/mulish_normal"
                android:gravity="center_vertical"
                android:lineSpacingExtra="-1sp"
                android:text="@string/confirm_pwd"
                android:textAppearance="@style/email" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <EditText
                    android:id="@+id/edtConfirmPwd"
                    style="@style/inputEditText"
                    android:hint="@string/enter_your_pwd"
                    android:layout_centerVertical="true"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword" />

                <CheckBox
                    android:id="@+id/ConfirmchkPassword"
                    android:layout_width="@dimen/size_35dp"
                    android:layout_height="@dimen/size_35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="5dp"
                    android:button="@drawable/checkbox_background"
                    android:gravity="center_vertical" />
            </RelativeLayout>

            <TextView
                android:layout_width="455dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/mulish_normal"
                android:gravity="center_vertical"
                android:lineSpacingExtra="-1sp"
                android:text="@string/password_det"
                android:textAppearance="@style/enter_your_email" />

            <Button
                android:id="@+id/btnUpdate"
                style="@style/DefaultButton"
                android:layout_marginTop="@dimen/size_32dp"
                android:fontFamily="@font/mulish_normal"
                android:text="@string/update"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>