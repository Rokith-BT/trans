<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/size_600dp"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:gravity="end"
    android:background="@color/loginBg"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:background="@drawable/rounded_rectangle_white"
        android:orientation="vertical">



        <TextView
            android:id="@+id/close_fragment"
            style="@style/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_16dp"
            android:drawableEnd="@drawable/close_expired"
            android:text="@string/consent_request" />


        <TextView
            style="@style/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_50dp"
            android:text="@string/patient_details" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/size_60dp"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:src="@drawable/ic_user" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/patient_name"
                        style="@style/textView"
                        android:text="@string/patient_name" />

                    <TextView
                        android:id="@+id/abha_address"
                        style="@style/textView"
                        android:visibility="visible"
                        android:text="@string/abha_address" />

                    <TextView
                        android:id="@+id/age"
                        style="@style/textView"
                        android:text="@string/gender" />


                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>


        <TextView
            style="@style/textView"
            android:layout_marginStart="@dimen/size_50dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:text="@string/purpose_of_request"
            android:textStyle="normal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/size_50dp"
            android:layout_marginEnd="@dimen/size_20dp">

            <Spinner
                android:id="@+id/purposeRequest"
                style="@style/editText"
                android:background="@drawable/rounded_rectangle_gray_outline" />

            <View
                android:layout_width="@dimen/size_32dp"
                android:layout_height="@dimen/size_32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:background="@drawable/chevron_down" />
        </RelativeLayout>

        <TextView
            style="@style/textView"
            android:layout_marginStart="@dimen/size_50dp"
            android:text="@string/health_info_from"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/edtFromDate"
            style="@style/editText"
            android:layout_marginStart="@dimen/size_50dp"
            android:layout_marginEnd="@dimen/size_20dp"
            android:drawableEnd="@drawable/calendar_date"
            android:drawablePadding="10dp"
            android:focusable="false"
            android:hint="@string/date_format"
            android:imeOptions="actionNext"
            android:paddingEnd="10dp" />


        <TextView
            style="@style/textView"
            android:layout_marginStart="@dimen/size_50dp"
            android:text="@string/health_info_to"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/edtToDate"
            style="@style/editText"
            android:layout_marginStart="@dimen/size_50dp"
            android:layout_marginEnd="@dimen/size_20dp"
            android:drawableEnd="@drawable/calendar_date"
            android:drawablePadding="10dp"
            android:focusable="false"
            android:hint="@string/date_format"
            android:imeOptions="actionNext"
            android:paddingEnd="10dp" />

        <TextView
            style="@style/textView"
            android:textColor="@color/menuTxtColor"
            android:layout_marginStart="@dimen/size_50dp"
            android:text="@string/health_info_type"
            android:textStyle="normal" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/size_50dp"
                android:layout_marginEnd="@dimen/size_32dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lyt_op_consulation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rectangle_light_blue"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_op_consulation"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/size_10dp"
                        android:gravity="center"
                        android:text="@string/op_consultantion"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyt_diagnostic_report"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rectangle_light_blue"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_diagnostic_report"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/size_10dp"
                        android:gravity="center"
                        android:text="@string/diagnostic_report"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyt_prescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rectangle_light_blue"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_prescription"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/size_10dp"
                        android:gravity="center"
                        android:text="@string/prescription"
                        android:textColor="@color/black" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/size_50dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_32dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lyt_discharge_summary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rectangle_light_blue"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_discharge_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/size_10dp"
                        android:gravity="center"
                        android:text="@string/discharge_summary"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyt_immunisation_record"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rectangle_light_blue"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_immunisation_record"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/size_10dp"
                        android:gravity="center"
                        android:text="@string/immunisation_record"
                        android:textColor="@color/black" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/size_50dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_32dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lyt_health_document_record"                   android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rectangle_light_blue"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_health_document_record"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/size_10dp"
                        android:gravity="center"
                        android:text="@string/health_document_record"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyt_wellness_record"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rectangle_light_blue"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_wellness_record"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/size_10dp"
                        android:gravity="center"
                        android:text="@string/wellness_record"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyt_invoice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rectangle_light_blue"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_invoice"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/size_10dp"
                        android:gravity="center"
                        android:text="@string/invoice"
                        android:textColor="@color/black" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


        <TextView
            style="@style/textView"
            android:layout_marginStart="@dimen/size_50dp"
            android:text="@string/consent_expiry"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/consent_expiry"
            style="@style/editText"
            android:layout_marginStart="@dimen/size_50dp"
            android:layout_marginEnd="@dimen/size_20dp"
            android:drawableEnd="@drawable/calendar_date"
            android:drawablePadding="10dp"
            android:focusable="false"
            android:hint="@string/date_format"
            android:imeOptions="actionNext"
            android:paddingEnd="10dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_20dp"
            android:indeterminateTint="@color/appbarColor"
            android:visibility="gone"/>

        <Button
            android:id="@+id/request_consent"
            style="@style/DefaultButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp"
            android:layout_marginTop="@dimen/size_20dp"
            android:layout_marginBottom="@dimen/size_10dp"
            android:layout_marginStart="@dimen/size_50dp"
            android:layout_marginEnd="@dimen/size_20dp"
            android:text="@string/request_consent" />




    </LinearLayout>
    </ScrollView>
</RelativeLayout>