<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/size_20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="visible"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearScribble"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle_blue_outline"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgScribble"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/scribble_sel" />

            <TextView
                android:id="@+id/txtScribble"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size_10dp"
                android:gravity="center"
                android:text="@string/scribble"
                android:textAppearance="@style/good_morning"
                android:textColor="@color/blue_text" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle_gray_outline"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgText"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/text" />

            <TextView
                android:id="@+id/txtText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size_10dp"
                android:gravity="center"
                android:text="@string/text"
                android:textAppearance="@style/good_morning" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearVoice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle_gray_outline"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgVoice"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/voice" />

            <TextView
                android:id="@+id/txtVoice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size_10dp"
                android:gravity="center"
                android:text="@string/voice"
                android:textAppearance="@style/good_morning" />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size_20dp"
        android:background="@drawable/rounded_rectangle_light_blue"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/linearScribbleDet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtSaveScribble"
                android:layout_width="100dp"
                android:layout_height="@dimen/size_40dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="@string/save"
                android:textAppearance="@style/logout" />

            <LinearLayout
                android:id="@+id/linearicons"
                android:layout_width="@dimen/size_64dp"
                android:layout_height="270dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/size_20dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgPenScribble"
                    android:layout_width="@dimen/size_32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/pen"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/imgEraserScribble"
                    android:layout_width="@dimen/size_32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/size_16dp"
                    android:src="@drawable/eraser"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/imgCameraScribble"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/size_16dp"
                    android:src="@drawable/camera" />

                <ImageView
                    android:id="@+id/imgUploadScribble"
                    android:layout_width="@dimen/size_32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/size_16dp"
                    android:src="@drawable/file_upload"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/imgDelScribble"
                    android:layout_width="@dimen/size_32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/size_16dp"
                    android:src="@drawable/delete"
                    android:visibility="gone"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="500dp"
                android:layout_height="300dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@+id/linearicons" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_100dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/rounded_rectangle_blue"
                android:orientation="horizontal"
                android:visibility="gone">

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearTextDet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtSaveText"
                android:layout_width="100dp"
                android:layout_height="@dimen/size_40dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="@string/save"
                android:textAppearance="@style/logout" />

            <LinearLayout
                android:id="@+id/linearTextIcons"
                android:layout_width="@dimen/size_64dp"
                android:layout_height="160dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/size_20dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgCameraText"
                    android:layout_width="@dimen/size_32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/camera" />

                <ImageView
                    android:id="@+id/imgUploadText"
                    android:layout_width="@dimen/size_32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/size_16dp"
                    android:src="@drawable/file_upload" />

                <ImageView
                    android:id="@+id/imgDeleteText"
                    android:layout_width="@dimen/size_32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/size_16dp"
                    android:src="@drawable/delete" />

            </LinearLayout>

            <EditText
                android:id="@+id/edtText"
                android:layout_width="500dp"
                android:layout_height="300dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@+id/linearTextIcons"
                android:background="@drawable/rounded_rectangle_gray_outline"
                android:imeOptions="actionDone"
                android:paddingStart="@dimen/size_10dp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearVoiceDet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recTextListening"
                android:paddingStart="@dimen/size_100dp"
                android:layout_marginEnd="@dimen/size_150dp"
                android:layout_alignParentEnd="true"
                android:text="@string/tap_to_mic_on"
                android:layout_marginTop="@dimen/size_50dp"/>

            <com.plenome.pos.views.ExtendedEditTExt
                android:id="@+id/recText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/recTextListening"
                android:layout_marginStart="@dimen/size_50dp"
                android:layout_marginTop="@dimen/size_50dp"
                android:layout_marginEnd="@dimen/size_50dp"
                android:layout_marginBottom="@dimen/size_20dp"
                android:textSize="@dimen/size_text_16sp"
                android:textColor="#1C2253"
                android:gravity="start"
                android:hint="Enter the report"
                android:paddingStart="@dimen/size_50dp"
                android:paddingTop="@dimen/size_50dp"
                android:fontFamily="@font/mulish_normal"
                android:layout_above="@+id/btnSaveVoice"
                android:background="@drawable/rounded_rectangle_gray_outline"/>



            <ImageView
                android:id="@+id/record"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/voice_mic" />
            <ImageView
                android:id="@+id/recordstop"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:src="@drawable/recordaudio" />

            <Button
                android:id="@+id/btnSaveVoice"
                android:layout_width="@dimen/size_150dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/rounded_rectangle_blue"
                android:fontFamily="@font/mulish_normal"
                android:text="@string/save"
                android:visibility="gone"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/size_text_16sp" />


        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>