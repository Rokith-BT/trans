<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearCreateAbha"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgAyushman"
            android:layout_width="375dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/ayushman_bharat" />

        <TextView
            android:id="@+id/ayushman_bh"
            android:layout_width="420dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="7sp"
            android:text="@string/ayushman_bh"
            android:textAppearance="@style/ayushman_bh" />

        <TextView
            android:id="@+id/abha_health"
            android:layout_width="419dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/abha_health"
            android:textAppearance="@style/abha_health" />

        <Button
            android:id="@+id/btn_create_abha"
            style="@style/DefaultButton"
            android:layout_width="420dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_32dp"
            android:text="@string/create_abha"
            android:textAllCaps="false" />
    </LinearLayout>


</RelativeLayout>