<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/loginBg"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center_vertical"
                    android:text="@string/identificationType"
                    android:textAppearance="@style/enter_text" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45dp"
                    android:layout_marginTop="@dimen/size_4dp">

                    <Spinner
                        android:id="@+id/spinSelect"
                        style="@style/editText"
                        android:layout_height="@dimen/size_45dp"
                        android:background="@drawable/rounded_rectangle_gray_outline" />

                    <View
                        android:layout_width="@dimen/size_32dp"
                        android:layout_height="@dimen/size_32dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/chevron_down" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txtOptions"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="@dimen/size_16dp"
                    android:gravity="center_vertical"
                    android:text="@string/patient_id"
                    android:textAppearance="@style/enter_text" />

                <LinearLayout
                    android:id="@+id/lytPatientId"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <!--                <EditText-->
                    <!--                    android:id="@+id/edtDialCode"-->
                    <!--                    android:layout_width="55dp"-->
                    <!--                    android:layout_height="@dimen/size_45dp"-->
                    <!--                    android:layout_marginTop="@dimen/size_6dp"-->
                    <!--                    android:layout_marginEnd="@dimen/size_10dp"-->
                    <!--                    android:background="@drawable/rounded_rectangle_gray_outline"-->
                    <!--                    android:fontFamily="@font/mulish_normal"-->
                    <!--                    android:gravity="center_vertical"-->
                    <!--                    android:paddingStart="@dimen/size_10dp"-->
                    <!--                    android:text="+ 91"-->
                    <!--                    android:visibility="gone"/>-->

                    <EditText
                        android:id="@+id/edtPatientId"
                        style="@style/inputEditText"
                        android:layout_height="@dimen/size_45dp"
                        android:layout_marginTop="@dimen/size_6dp"
                        android:fontFamily="@font/mulish_normal"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="16" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lytPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rectangle_gray_outline"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/relPhoneNo"
                        android:layout_width="70dp"
                        android:layout_height="@dimen/size_45dp">

                        <ImageView
                            android:id="@+id/imgFlagPhoneNo"
                            android:layout_width="35dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/size_10dp" />

                        <View
                            android:id="@+id/viewPhone"
                            android:layout_width="@dimen/size_20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/chevron_down" />

                    </RelativeLayout>

                    <View
                        android:layout_width="@dimen/size_1dp"
                        android:layout_height="45dp"
                        android:background="@color/gray" />

                    <TextView
                        android:id="@+id/txtPhoneCode"
                        style="@style/editText"
                        android:layout_width="@dimen/size_50dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent" />

                    <EditText
                        android:id="@+id/edtPhoneNo"
                        style="@style/editText"
                        android:background="@android:color/transparent"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="10" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnContinue"
                    style="@style/DefaultButton"
                    android:layout_marginTop="@dimen/size_40dp"
                    android:background="@drawable/rounded_rectangle_blue"
                    android:text="@string/continued"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnAddNewPatient"
                    style="@style/DefaultButton"
                    android:layout_marginTop="@dimen/size_14dp"
                    android:background="@drawable/rounded_rectangle_blue_outline"
                    android:text="@string/add_new_patient"
                    android:textAllCaps="false"
                    android:textColor="@color/appbarColor" />


            </LinearLayout>


        </ScrollView>
    </LinearLayout>


</RelativeLayout>