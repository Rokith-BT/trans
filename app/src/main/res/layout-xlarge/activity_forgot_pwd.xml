<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:background="@color/loginBg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="455dp"
                android:layout_height="30dp"
                android:fontFamily="@font/mulish_normal"
                android:gravity="center_vertical"
                android:lineSpacingExtra="-1sp"
                android:text="@string/password_reset"
                android:textAppearance="@style/password_reset" />

            <TextView
                android:layout_width="455dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/mulish_normal"
                android:gravity="center_vertical"
                android:lineSpacingExtra="-1sp"
                android:text="@string/enter_your_email_address"
                android:textAppearance="@style/enter_your_email" />

            <TextView
                android:layout_width="455dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/mulish_normal"
                android:gravity="center_vertical"
                android:lineSpacingExtra="-1sp"
                android:text="@string/email"
                android:textAppearance="@style/email" />

            <EditText
                android:id="@+id/edtEmail"
                style="@style/inputEditText"
                android:layout_marginTop="@dimen/size_10dp"
                android:fontFamily="@font/mulish_normal"
                android:hint="@string/enter_your_email"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/invalid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please enter valid email"
                android:textColor="@color/red_text"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnNext"
                style="@style/DefaultButton"
                android:layout_marginTop="@dimen/size_32dp"
                android:fontFamily="@font/mulish_normal"
                android:text="@string/next"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>