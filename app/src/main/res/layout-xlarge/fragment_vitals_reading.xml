<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearBtns"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/size_20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLeft"
            style="@style/DefaultButton"
            android:layout_weight="0.3"
            android:text="@string/left" />

        <Button
            android:id="@+id/btnRight"
            style="@style/blueBorderButton"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_weight="0.3"
            android:text="@string/right" />

        <Button
            android:id="@+id/btnRetake"
            style="@style/blueBorderButton"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_weight="0.2"
            android:text="@string/retake" />

        <Button
            android:id="@+id/btnGenReport"
            style="@style/DefaultButton"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_weight="0.2"
            android:text="@string/genReport" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearBtns"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="450dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/imgLeg"
                android:layout_width="185dp"
                android:layout_height="400dp"
                android:layout_marginStart="@dimen/size_70dp"
                android:layout_centerVertical="true"
              />

            <ImageView
                android:id="@+id/imgLegReport"
                android:layout_width="185dp"
                android:layout_height="400dp"
                android:layout_marginStart="@dimen/size_70dp"
                android:layout_centerVertical="true"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgColorMap"
                android:layout_width="30dp"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size_20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/size_20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45dp"
                android:background="@drawable/rounded_rectangle_blue_outline"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:id="@+id/btnRow"
                    style="@style/DefaultButton"
                    android:layout_weight="1"
                    android:text="@string/row" />

                <Button
                    android:id="@+id/btnAI"
                    style="@style/blueBorderButton"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="@string/ai" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_35dp"
                android:layout_above="@+id/linearValues"
                android:gravity="center"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/linearValues"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_35dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal">

                <!--  <EditText
                      android:layout_width="@dimen/size_60dp"
                      android:layout_height="30dp"
                      android:background="@drawable/edit_text" />

                  <EditText
                      android:layout_width="@dimen/size_60dp"
                      android:layout_height="30dp"
                      android:layout_marginStart="@dimen/size_35dp"
                      android:background="@drawable/edit_text" />

                  <EditText
                      android:layout_width="@dimen/size_60dp"
                      android:layout_height="30dp"
                      android:layout_marginStart="@dimen/size_35dp"
                      android:background="@drawable/edit_text" />

                  <EditText
                      android:layout_width="@dimen/size_60dp"
                      android:layout_height="30dp"
                      android:layout_marginStart="@dimen/size_35dp"
                      android:background="@drawable/edit_text" />

                  <EditText
                      android:layout_width="@dimen/size_60dp"
                      android:layout_height="30dp"
                      android:layout_marginStart="@dimen/size_35dp"
                      android:background="@drawable/edit_text" />

                  <EditText
                      android:layout_width="@dimen/size_60dp"
                      android:layout_height="30dp"
                      android:layout_marginStart="@dimen/size_20dp"
                      android:background="@drawable/edit_text" /> -->

            </LinearLayout>


            <TextView
                android:id="@+id/average_vpt"
                android:layout_width="535dp"
                android:layout_height="30dp"
                android:layout_below="@+id/linearValues"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_40dp"
                android:gravity="center"
                android:text="@string/avgVPT"
                android:textAppearance="@style/doctorName"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>