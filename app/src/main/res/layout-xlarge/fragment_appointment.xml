<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/loginBg">

    <RelativeLayout
        android:id="@+id/relMain"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/size_20dp"
        android:background="@color/bg">

        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="@string/welcome"
            android:textAppearance="@style/welcome_text" />

        <RelativeLayout
            android:id="@+id/relTabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_60dp"
            android:layout_below="@+id/txtWelcome">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:tabIndicatorColor="@color/appbarColor"
                app:tabSelectedTextColor="@color/appbarColor"
                app:tabTextAppearance="@style/logout"
                app:tabTextColor="@color/black">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="@string/todayConsultation" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="@string/upcomingConsultation" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="@string/history" />
            </com.google.android.material.tabs.TabLayout>

            <Button
                android:id="@+id/btn_book_appointment"
                style="@style/DefaultButton"
                android:layout_width="200dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/appointmentBook"
                android:textAllCaps="false" />

            <ImageView
                android:id="@+id/imgFilter"
                android:layout_width="@dimen/button_height"
                android:layout_height="@dimen/button_height"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/size_10dp"
                android:layout_toStartOf="@+id/btn_book_appointment"
                android:background="@drawable/filter" />

            <ImageView
                android:id="@+id/imgRefresh"
                android:layout_width="@dimen/button_height"
                android:layout_height="@dimen/button_height"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/size_10dp"
                android:layout_toStartOf="@+id/imgFilter"
                android:background="@drawable/refresh" />

            <EditText
                android:id="@+id/edtFilter"
                style="@style/ipEditText"
                android:layout_width="180dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/size_10dp"
                android:layout_toStartOf="@+id/imgRefresh"
                android:background="@drawable/rounded_rectangle_blue_outline"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textColor="#6070FF"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearHeading"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/relTabs"
            android:layout_marginTop="@dimen/size_20dp"
            android:background="@drawable/table_title_bg">

            <TextView
                style="@style/tblHead_white"
                android:text="@string/name" />

            <TextView
                android:layout_width="@dimen/size_100dp"
                android:layout_height="@dimen/size_35dp"
                android:fontFamily="@font/mulish_normal"
                android:gravity="center"
                android:text="@string/patient_id"
                android:textColor="@color/white"
                android:textSize="@dimen/size_text_14sp" />

            <TextView
                style="@style/tblHead_white"
                android:text="@string/appointmentNo" />

            <TextView
                android:layout_width="@dimen/size_100dp"
                android:layout_height="@dimen/size_35dp"
                android:fontFamily="@font/mulish_normal"
                android:gravity="center"
                android:text="@string/token_no"
                android:textColor="@color/white"
                android:textSize="@dimen/size_text_14sp" />

            <TextView
                style="@style/tblHead_white"
                android:text="@string/apptDate" />

            <TextView
                style="@style/tblHead_white"
                android:text="@string/mobileNo" />

            <TextView
                style="@style/tblHead_white"
                android:text="@string/consultant" />

            <TextView
                style="@style/tblHead_white"
                android:text="@string/status" />

            <CheckBox
                android:id="@+id/chkStatus"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:visibility="gone" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/linearPages"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/rows_per_page"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_40dp"
                android:gravity="center_vertical"
                android:text="@string/rows_per_page"
                android:textAppearance="@style/morning" />

            <Spinner
                android:id="@+id/spinPages"
                style="@style/appointment"
                android:layout_width="@dimen/size_64dp"
                android:layout_height="@dimen/size_40dp"
                android:layout_marginStart="@dimen/size_16dp"
                android:layout_toEndOf="@+id/rows_per_page"
                android:background="@drawable/rounded_rectangle_blue_outline" />

            <View
                android:layout_width="@dimen/size_20dp"
                android:layout_height="@dimen/size_20dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/size_50dp"
                android:layout_toEndOf="@+id/rows_per_page"
                android:background="@drawable/chevron_down_blue" />

            <ImageView
                android:id="@+id/imgPrev"
                android:layout_width="@dimen/size_28dp"
                android:layout_height="@dimen/size_28dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toStartOf="@+id/tblPages"
                android:src="@drawable/chevron_left" />

            <TableLayout
                android:id="@+id/tblPages"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_28dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/txtEtc" />

            <TextView
                android:id="@+id/txtEtc"
                android:layout_width="@dimen/size_28dp"
                android:layout_height="@dimen/size_28dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/txtLastPage"
                android:enabled="false"
                android:fontFamily="@font/mulish_normal"
                android:gravity="center"
                android:text="of"
                android:textColor="@color/menuTxtColor" />

            <TextView
                android:id="@+id/txtLastPage"
                android:layout_width="@dimen/size_28dp"
                android:layout_height="@dimen/size_28dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_10dp"
                android:layout_toStartOf="@+id/imgNext"
                android:background="@drawable/light_blue_circle_bg"
                android:fontFamily="@font/mulish_normal"
                android:gravity="center"
                android:textColor="@color/menuTxtColor" />

            <ImageView
                android:id="@+id/imgNext"
                android:layout_width="@dimen/size_28dp"
                android:layout_height="@dimen/size_28dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/size_10dp"
                android:src="@drawable/chevron_right" />


            <TextView
                android:id="@+id/txtResults"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_40dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/size_16dp"
                android:layout_toStartOf="@+id/imgPrev"
                android:gravity="center_vertical"
                android:textAppearance="@style/abha_health" />
        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearPages"
            android:layout_below="@+id/linearHeading"
            android:layout_marginBottom="@dimen/size_20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableLayout
                    android:id="@+id/tblAppointments"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/table_bg" />

                <ImageView
                    android:id="@+id/imgNoData"
                    android:layout_width="270dp"
                    android:layout_height="260dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/size_100dp"
                    android:background="@drawable/no_data"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtNoData"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_40dp"
                    android:layout_below="@+id/imgNoData"
                    android:gravity="center"
                    android:text="@string/noDataFound"
                    android:textAppearance="@style/doctorName"
                    android:visibility="gone" />

            </RelativeLayout>


        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/size_20dp"
        android:background="@color/bg"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_weight="1"
        android:visibility="gone" />
</RelativeLayout>