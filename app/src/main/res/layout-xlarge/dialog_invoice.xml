<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/size_10dp"
        android:background="@drawable/rounded_rectangle_white"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearBtns">

            <LinearLayout
                android:id="@+id/linearTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgClose"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:src="@drawable/close" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgLogo"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/plenome_icon" />

                    <TextView
                        android:id="@+id/plenome"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/poppins_normal"
                        android:gravity="center_vertical"
                        android:text="@string/plenome_hospitals"
                        android:textAppearance="@style/plenome"
                        android:textSize="@dimen/size_text_20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/address"
                    android:layout_width="550dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/hosp_address"
                    android:textAppearance="@style/enter_text" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="500dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="@string/phone"
                    android:textAppearance="@style/enter_text"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_4dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/size_120dp"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="@string/invoice"
                        android:textAppearance="@style/enter_text"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtInvoiceNo"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginStart="@dimen/size_10dp"
                        android:gravity="center_vertical"
                        android:textAppearance="@style/enter_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/size_120dp"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="@string/date"
                        android:textAppearance="@style/enter_text"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtPaymentDate"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginStart="@dimen/size_10dp"
                        android:gravity="center_vertical"
                        android:textAppearance="@style/enter_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/size_120dp"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="@string/name"
                        android:textAppearance="@style/enter_text"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginStart="@dimen/size_10dp"
                        android:gravity="center_vertical"
                        android:textAppearance="@style/enter_text" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/size_120dp"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="@string/mobile"
                        android:textAppearance="@style/enter_text"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtMobile"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginStart="@dimen/size_10dp"
                        android:gravity="center_vertical"
                        android:textAppearance="@style/enter_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_4dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/size_120dp"
                        android:layout_height="40dp"
                        android:gravity="top"
                        android:text="@string/address"
                        android:textAppearance="@style/enter_text"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="@dimen/size_10dp"
                        android:gravity="top"
                        android:textAppearance="@style/status_text" />
                </LinearLayout>

                <!--  <ImageView
                      android:layout_width="match_parent"
                      android:layout_height="5dp"
                      android:layout_marginTop="2dp"
                      android:layerType="software"
                      android:src="@drawable/dashed_line_blue"
                      android:visibility="visible" /> -->

                <!--   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="35dp"
                       android:layout_marginStart="@dimen/size_20dp"
                       android:layout_marginTop="@dimen/size_4dp"
                       android:layout_marginEnd="@dimen/size_20dp"
                       android:orientation="horizontal">

                       <TextView
                           android:layout_width="@dimen/size_120dp"
                           android:layout_height="35dp"
                           android:layout_marginTop="5dp"
                           android:gravity="center_vertical"
                           android:text="@string/amount"
                           android:textAppearance="@style/enter_text"
                           android:textStyle="bold" />

                       <TextView
                           android:id="@+id/txtAmount"
                           android:layout_width="match_parent"
                           android:layout_height="35dp"
                           android:layout_marginStart="@dimen/size_10dp"
                           android:layout_marginTop="5dp"
                           android:gravity="center_vertical"
                           android:textAppearance="@style/enter_text" />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="35dp"
                       android:layout_marginStart="@dimen/size_20dp"
                       android:layout_marginTop="@dimen/size_4dp"
                       android:layout_marginEnd="@dimen/size_20dp"
                       android:orientation="horizontal">

                       <TextView
                           android:layout_width="@dimen/size_120dp"
                           android:layout_height="35dp"
                           android:layout_marginTop="5dp"
                           android:gravity="center_vertical"
                           android:text="@string/payMode"
                           android:textAppearance="@style/enter_text"
                           android:textStyle="bold" />

                       <TextView
                           android:id="@+id/txtPaymentMode"
                           android:layout_width="match_parent"
                           android:layout_height="35dp"
                           android:layout_marginStart="@dimen/size_10dp"
                           android:layout_marginTop="5dp"
                           android:gravity="center_vertical"
                           android:textAppearance="@style/enter_text" />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="35dp"
                       android:layout_marginStart="@dimen/size_20dp"
                       android:layout_marginTop="@dimen/size_4dp"
                       android:layout_marginEnd="@dimen/size_20dp"
                       android:orientation="horizontal">

                       <TextView
                           android:layout_width="@dimen/size_120dp"
                           android:layout_height="35dp"
                           android:layout_marginTop="5dp"
                           android:gravity="center_vertical"
                           android:text="@string/section"
                           android:textAppearance="@style/enter_text"
                           android:textStyle="bold" />

                       <TextView
                           android:id="@+id/txtSection"
                           android:layout_width="match_parent"
                           android:layout_height="35dp"
                           android:layout_marginStart="@dimen/size_10dp"
                           android:layout_marginTop="5dp"
                           android:gravity="center_vertical"
                           android:textAppearance="@style/enter_text" />
                   </LinearLayout>


                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="70dp"
                       android:layout_marginStart="@dimen/size_20dp"
                       android:layout_marginTop="@dimen/size_4dp"
                       android:layout_marginEnd="@dimen/size_20dp"
                       android:orientation="horizontal">

                       <TextView
                           android:layout_width="@dimen/size_120dp"
                           android:layout_height="match_parent"
                           android:layout_marginTop="5dp"
                           android:gravity="top"
                           android:text="@string/address"
                           android:textAppearance="@style/enter_text"
                           android:textStyle="bold" />

                       <TextView
                           android:id="@+id/txtAddress"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_marginStart="@dimen/size_10dp"
                           android:layout_marginTop="5dp"
                           android:gravity="top"
                           android:textAppearance="@style/enter_text" />
                   </LinearLayout>-->
                <TableLayout
                    android:id="@+id/tblLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="@dimen/size_20dp" />

                <!-- <ImageView
                     android:layout_width="match_parent"
                     android:layout_height="5dp"
                     android:layout_marginTop="2dp"
                     android:layerType="software"
                     android:src="@drawable/dashed_line_blue"
                     android:visibility="visible" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="@dimen/size_120dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/subTotal"
                        android:textAppearance="@style/enter_text" />

                    <TextView
                        android:id="@+id/txtSubTotal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/size_10dp"
                        android:gravity="center_vertical|end"
                        android:textAppearance="@style/enter_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/size_120dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/tax"
                        android:textAppearance="@style/enter_text" />

                    <TextView
                        android:id="@+id/txtTax"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/size_10dp"
                        android:gravity="center_vertical|end"
                        android:textAppearance="@style/enter_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/size_120dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/total"
                        android:textAppearance="@style/enter_text"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtTotal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical|end"
                        android:textAppearance="@style/enter_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearThanks"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/thanku"
                        android:textAppearance="@style/password_ch"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtWebsite"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:textAppearance="@style/enter_text" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/linearBtns"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginBottom="@dimen/size_20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/print_button"
                style="@style/DefaultButton"
                android:layout_marginStart="@dimen/size_20dp"
                android:layout_marginEnd="@dimen/size_20dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_rectangle_blue"
                android:text="@string/print"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/cancel_button"
                style="@style/DefaultButton"
                android:layout_marginStart="@dimen/size_20dp"
                android:layout_marginEnd="@dimen/size_20dp"
                android:layout_marginBottom="@dimen/size_20dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_rectangle_blue_outline"
                android:text="@string/nav_close"
                android:textAllCaps="false"
                android:textColor="@color/appbarColor" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>