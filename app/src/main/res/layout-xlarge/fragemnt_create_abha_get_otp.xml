<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rounded_rectangle_gray">

    <LinearLayout
        android:id="@+id/linearGetOTP"
        android:layout_width="455dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/create_abha"
            android:layout_width="455dp"
            android:layout_height="30dp"
            android:fontFamily="@font/mulish_normal"
            android:gravity="center_vertical"
            android:lineSpacingExtra="-1sp"
            android:text="@string/create_abha"
            android:textAppearance="@style/create_abha" />

        <TextView
            android:layout_width="455dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="-1sp"

            android:text="@string/create_abha1"
            android:textAppearance="@style/create_abha1" />

        <TextView
            android:id="@+id/enter_text"
            android:layout_width="455dp"
            android:layout_height="25dp"
            android:layout_marginTop="@dimen/size_50dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="-1sp"
            android:text="@string/aadharNo"
            android:textAppearance="@style/enter_text" />

        <EditText
            android:id="@+id/edtAadhaar"
            style="@style/inputEditText"
            android:gravity="center"
            android:digits="0123456789 "
            android:hint="@string/aadhaar_hint"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="14" />

        <LinearLayout
            android:layout_width="455dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/size_35dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chkAgree"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/i_provide_m"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:lineSpacingExtra="1sp"
                android:text="@string/i_provide_m"
                android:textAppearance="@style/i_provide_m"
                android:translationY="-0.47sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_get_otp"
            style="@style/DefaultButton"
            android:layout_marginTop="@dimen/size_16dp"
            android:text="@string/getOtp"
            android:textAllCaps="false" />
    </LinearLayout>
</RelativeLayout>