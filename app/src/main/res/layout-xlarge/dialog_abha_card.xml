<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_rectangle_gray">

    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_margin="@dimen/size_20dp"
        android:src="@drawable/close" />

    <ImageView
        android:id="@+id/imgAbhaCard"
        android:layout_width="700dp"
        android:layout_height="470dp"
        android:layout_above="@+id/linearBtns"
        android:layout_below="@+id/imgClose"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@+id/linearBtns"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/size_20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/appbarColor"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_print"
                style="@style/DefaultButton"
                android:layout_marginTop="25dp"
                android:text="@string/download"
                android:textAllCaps="false" />
        </FrameLayout>

        <Button
            android:id="@+id/btn_close"
            style="@style/DefaultButton"
            android:layout_marginTop="@dimen/size_20dp"
            android:background="@drawable/rounded_rectangle_blue_outline"
            android:text="@string/nav_close"
            android:textAllCaps="false"
            android:textColor="@color/blue_text" />
    </LinearLayout>

</RelativeLayout>