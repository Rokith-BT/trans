<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="510dp"
    android:layout_centerInParent="true"
    android:background="@drawable/rounded_rectangle_white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_35dp"
        android:layout_marginTop="@dimen/size_10dp">

        <TextView
            style="@style/textView"
            android:layout_marginStart="@dimen/size_20dp"
            android:text="@string/txt_filter"
            android:textAppearance="@style/enter_text" />

        <TextView
            android:id="@+id/txtClearFilter"
            style="@style/textView"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/size_20dp"
            android:layout_marginEnd="2dp"
            android:layout_toStartOf="@+id/imgClose"
            android:gravity="center_vertical"
            android:text="@string/txt_clear_filter"
            android:textColor="@color/blue_text"
            android:textSize="@dimen/size_text_14sp" />

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/size_20dp"
            android:layout_marginEnd="@dimen/size_20dp"
            android:src="@drawable/close" />
    </RelativeLayout>


    <TextView
        android:id="@+id/txtTitleFromDate"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/size_20dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:layout_marginEnd="@dimen/size_20dp"
        android:gravity="center_vertical"
        android:text="@string/fromDate"
        android:textAppearance="@style/enter_text" />

    <EditText
        android:id="@+id/edtFromDate"
        style="@style/editText"
        android:layout_marginStart="@dimen/size_20dp"
        android:layout_marginEnd="@dimen/size_20dp"
        android:drawableEnd="@drawable/calendar_date"
        android:drawablePadding="10dp"
        android:focusable="false"
        android:hint="@string/date_format"
        android:imeOptions="actionNext"
        android:paddingEnd="10dp" />

    <TextView
        android:id="@+id/txtTitleToDate"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:layout_marginStart="@dimen/size_20dp"
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_marginEnd="@dimen/size_20dp"
        android:gravity="center_vertical"
        android:text="@string/toDate"
        android:textAppearance="@style/enter_text" />

    <EditText
        android:id="@+id/edtToDate"
        style="@style/editText"
        android:layout_marginStart="@dimen/size_20dp"
        android:layout_marginEnd="@dimen/size_20dp"
        android:drawableEnd="@drawable/calendar_date"
        android:drawablePadding="10dp"
        android:focusable="false"
        android:hint="@string/date_format"
        android:imeOptions="actionNext"
        android:paddingEnd="@dimen/size_10dp" />


    <TextView
        android:id="@+id/txtPatientId"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/size_20dp"
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_marginEnd="@dimen/size_20dp"
        android:gravity="center_vertical"
        android:text="@string/patient_id"
        android:textAppearance="@style/enter_text" />

    <EditText
        android:id="@+id/edtPatientId"
        style="@style/editText"
        android:layout_marginStart="@dimen/size_20dp"
        android:layout_marginEnd="@dimen/size_20dp"
        android:drawablePadding="10dp"
        android:inputType="number"
        android:imeOptions="actionDone"
        android:paddingEnd="@dimen/size_10dp" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/size_20dp"
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_marginEnd="@dimen/size_20dp"
        android:gravity="center_vertical"
        android:text="@string/paymentMethod"
        android:textAppearance="@style/enter_text" />

    <RelativeLayout
        android:id="@+id/relPaymentMethod"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="@dimen/size_20dp"
        android:layout_marginEnd="@dimen/size_20dp">

        <Spinner
            android:id="@+id/spinPaymentMethod"
            style="@style/editText"
            android:background="@drawable/rounded_rectangle_gray_outline" />

        <View
            android:id="@+id/viewPaymentMethod"
            android:layout_width="@dimen/size_32dp"
            android:layout_height="@dimen/size_32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/chevron_down" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="@dimen/size_20dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnCancel"
            style="@style/DefaultButton"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle_blue_outline"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/appbarColor" />

        <Button
            android:id="@+id/btnSubmit"
            style="@style/DefaultButton"
            android:layout_marginStart="@dimen/size_20dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle_blue"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </LinearLayout>

</LinearLayout>