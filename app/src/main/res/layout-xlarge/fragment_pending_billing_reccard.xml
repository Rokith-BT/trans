<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_marginVertical="@dimen/size_12dp"
        android:background="#FCFCFC"
        android:weightSum="5"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateTxt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textSize="@dimen/size_text_14sp"
            android:layout_gravity="center"
            android:fontFamily="@font/mulish_normal"
            android:textColor="#01030F"/>
        <TextView
            android:id="@+id/sectionTxt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/section"
            android:textSize="@dimen/size_text_14sp"
            android:layout_gravity="center"
            android:fontFamily="@font/mulish_normal"
            android:gravity="center"
            android:textColor="#01030F"/>

        <LinearLayout
            android:id="@+id/sectionId"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/sectionIdsTxt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/size_text_14sp"
                    android:layout_height="wrap_content"
                    android:text="@string/sectionId"
                    android:textSize="@dimen/size_text_14sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/mulish_normal"
                    android:textColor="#01030F"/>



            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/amtTxts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/amount"
                android:textSize="@dimen/size_text_14sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/mulish_normal"
                android:textColor="#01030F"/>
        </LinearLayout>

        <TextView
            android:id="@+id/makePayment"
            android:backgroundTint="@color/appbarColor"
            android:background="@drawable/rounded_rectangle_blue_outline"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:paddingVertical="@dimen/size_6dp"
            android:layout_height="wrap_content"
            android:text="@string/makePayment"
            android:textSize="@dimen/size_text_14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/mulish_normal"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/menu"
                android:paddingVertical="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_text_14sp"
                android:src="@drawable/menubilling"
                />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>