<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_rectangle_gray">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="206dp"
            android:layout_height="235dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/success_img" />

        <TextView
            android:id="@+id/txtSuccess"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/mulish_normal"
            android:gravity="center"
            android:text="@string/congratulations"
            android:textAppearance="@style/doctorName" />

        <Button
            android:id="@+id/btn_continue"
            style="@style/DefaultButton"
            android:layout_marginTop="@dimen/size_20dp"
            android:background="@drawable/rounded_rectangle_blue_outline"
            android:text="@string/continued"
            android:textAllCaps="false"
            android:visibility="gone"
            android:textColor="@color/blue_text" />


    </LinearLayout>

</RelativeLayout>