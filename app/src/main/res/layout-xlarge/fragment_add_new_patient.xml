<!--                        android:imeOptions="actionNext"-->
<!--                        android:visibility="invisible" />-->

<!--                </LinearLayout>-->

            </LinearLayout>
            <TextView
                android:id="@+id/kyc_text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="@dimen/size_16dp"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone"
                android:text="This is ABHA KYC Verified Profile."
                android:textColor="@color/green_text"
                android:textAppearance="@style/create_abha1" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_50dp"
                android:layout_gravity="end"
                android:layout_margin="@dimen/size_20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnABHA"
                    android:visibility="gone"
                    style="@style/DefaultButton"
                    android:layout_width="200dp"
                    android:background="@drawable/rounded_rectangle_blue_outline"
                    android:text="@string/abha"
                    android:textAllCaps="false"
                    android:textColor="@color/blue_text" />

                <Button
                    android:id="@+id/btnSubmit"
                    style="@style/DefaultButton"
                    android:layout_width="200dp"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:background="@drawable/rounded_rectangle_blue"
                    android:text="@string/submit"
                    android:textAllCaps="false" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <include layout="@layout/progress_dialog" />
    </LinearLayout>
</RelativeLayout>